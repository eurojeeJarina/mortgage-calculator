<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Slider?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="TOP_CENTER" hgap="10" vgap="10">
    <padding>
        <Insets top="10"/>
    </padding>

    <Label text="Purchase Price" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="purchaseAmountField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Downpayment" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="downPaymentField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Interest Rate" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="interestRateField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Total Repayments" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-weight: bold; -fx-font-size: 16"/>
    <Label text="10 years" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <TextField fx:id="tenYearLoanField" GridPane.rowIndex="4" GridPane.columnIndex="1" editable="false"/>

    <Label text="20 years" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <TextField fx:id="twentyYearLoanField" GridPane.rowIndex="5" GridPane.columnIndex="1" editable="false"/>

    <Label text="30 years" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
    <TextField fx:id="thirtyYearLoanField" GridPane.rowIndex="6" GridPane.columnIndex="1" editable="false"/>

    <Button fx:id="calculateBtn" text="Calculate" GridPane.rowIndex="7" GridPane.columnIndex="1" onAction="#onCalculateClicked"/>


</GridPane>